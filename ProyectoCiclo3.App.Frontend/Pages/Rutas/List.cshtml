@page
@model ProyectoCiclo3.App.Frontend.Pages.ListRutasModel
@{
}
 
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Aeropuertos origen</th>
      <th scope="col">Aeropuertos destino</th>
      <th scope="col">tiempo_estimado</th>
            <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
   @foreach (var ruta in Model.Rutas)
    {
        <tr>
            <td>@ruta.id</td>
            <td>@ruta.Aeropuertos origen</td>
            <td>@ruta.Aeropuertos destino</td>
            <td>@ruta.tiempo_estimado</td>
            
            <td>
              <a class="btn btn-info" asp-page="./Details" asp-route-avionId="@ruta.id"><i class="fas fa-adjust"></i>Ver</a>
              <a class="btn btn-info" asp-page="./Edit" asp-route-avionId="@ruta.id">Editar</a>
              <a class="btn btn-danger" href="">Eliminar</a>
            </td>
        </tr>
    }
  </tbody>
</table>